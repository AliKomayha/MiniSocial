@model List<MiniSocial.Dtos.SearchProfileDto>

<h4>Search Results</h4>
@if (!Model.Any())
{
    <p>No users found.</p>
}
else
{
    <ul class="list-group">
        @foreach (var user in Model)
        {
            <li class="list-group-item d-flex align-items-center">
                <img src="@(user.Avatar ?? "/images/default-avatar.png")" class="rounded-circle me-2" style="width:40px; height:40px; object-fit:cover;" />
                <div>
                    <a asp-controller="Profiles" asp-action="ViewProfile" asp-route-id="@user.Id" class="fw-bold text-dark">@user.DisplayName</a>
                    <div class="text-muted">@user.Username</div>
                </div>
            </li>
        }
    </ul>
}
